        padding: 30px 100px;
    }

    .form_egy_tomb {
        display: flex;
        justify-content: space-between;
    }

    .form_egyoszlopba_input {
        display: flex;
        flex-direction: column;
    }

    .ugyfelszolgalat_form_group {
        display: flex;
        flex-direction: column;
    }

        .ugyfelszolgalat_form_group > input {
            width: 300px;
            margin: 5px 0 10px 0;
            padding: 10px;
            background-color: #F8F9FA;
            ;
        }

        .ugyfelszolgalat_form_group > label {
            margin-top: 15px;
